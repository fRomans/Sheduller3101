<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MonthActivity">



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayoutMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.google.android.material.appbar.AppBarLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topMainMenuMonth"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/black"
                app:layout_anchor="@+id/appBarLayoutMonth"
                app:layout_anchorGravity="center"
                app:titleTextColor="@color/white">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/search_arrow_back_Month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:src="@drawable/arrow_back"
                    app:layout_constraintStart_toStartOf="@+id/topMainMenuMonth" />



            </com.google.android.material.appbar.MaterialToolbar>


            <FrameLayout
                android:id="@+id/mainContentMonth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />


        </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/calendar_month"/>

</androidx.constraintlayout.widget.ConstraintLayout>